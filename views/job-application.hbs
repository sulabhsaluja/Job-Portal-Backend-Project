<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Apply for Job</title>
    <link rel="shortcut icon" href="/images/logo.png" type="image/x-icon">

    <style>
    /* Reset default spacing */
    *, *::before, *::after {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: linear-gradient(to right, #e0eafc, #cfdef3);
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 20px;
      animation: fadeIn 1s ease-in;
    }

    h1 {
      text-align: center;
      color: #003366;
      margin-bottom: 30px;
      animation: slideDown 0.7s ease-out;
    }

    .post-job-form {
      background-color: #fff;
      padding: 40px;
      border-radius: 15px;
      box-shadow: 0 8px 16px rgba(0,0,0,0.1);
      width: 100%;
      max-width: 500px;
      animation: fadeInUp 0.8s ease-out;
    }

    .post-job-form label {
      margin-bottom: 8px;
      font-weight: 600;
      color: #333;
      display: block;
    }

    .post-job-form input,
    .post-job-form textarea {
      width: 100%;
      padding: 14px;
      margin-bottom: 20px;
      border: 1px solid #ccc;
      border-radius: 8px;
      font-size: 16px;
      transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }

    .post-job-form input:focus,
    .post-job-form textarea:focus {
      border-color: #0077cc;
      box-shadow: 0 0 8px rgba(0,119,204,0.3);
      outline: none;
    }

    .post-job-form textarea {
      resize: vertical;
      min-height: 120px;
    }

    .post-job-form button {
      width: 100%;
      padding: 14px;
      background-color: #0077cc;
      color: #fff;
      border: none;
      border-radius: 8px;
      font-size: 18px;
      font-weight: bold;
      cursor: pointer;
      transition: background-color 0.3s ease, transform 0.2s ease;
    }

    .post-job-form button:hover {
      background-color: #005fa3;
      transform: translateY(-2px);
    }

    .post-job-form button:active {
      transform: scale(0.98);
    }

    /* Animations */
    @keyframes fadeIn {
      from { opacity: 0; }
      to { opacity: 1; }
    }

    @keyframes fadeInUp {
      from { opacity: 0; transform: translateY(30px); }
      to { opacity: 1; transform: translateY(0); }
    }

    @keyframes slideDown {
      from { opacity: 0; transform: translateY(-20px); }
      to { opacity: 1; transform: translateY(0); }
    }

    /* Responsive tweak */
    @media (max-width: 600px) {
      .post-job-form {
        padding: 25px 20px;
      }

      h1 {
        font-size: 24px;
      }
    }
  </style>
  </head>
  <body>

    <div>
      <h1>Apply for Job</h1>

      <form action="/submit-application" method="POST" class="post-job-form">
        <input type="hidden" name="jobId" value="{{jobId}}" />

        <label for="fullName">Full Name:</label>
        <input type="text" id="fullName" name="fullName" required>

        <label for="email">Email:</label>
        <input type="email" id="email" name="email" required>

        <label for="coverLetter">Cover Letter:</label>
        <textarea id="coverLetter" name="coverLetter" required></textarea>

        <button type="submit">Submit Application</button>
      </form>
    </div>

  </body>
</html>
