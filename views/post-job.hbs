  </head>
  <body>

    {{> navbar}}

    <section class="hero">
      <h1>Post a New Job</h1>
    </section>

    <section class="categories">
      <form action="/post-job" method="POST" class="post-job-form">
        <input type="text" name="title" placeholder="Job Title" required><br><br>
        <input type="text" name="company" placeholder="Company Name" required><br><br>
        <input type="text" name="location" placeholder="Location" required><br><br>
        <input type="number" name="salary" placeholder="Salary (â‚¹)" required><br><br>
        <textarea name="description" placeholder="Job Description" required></textarea><br><br>
        <input type="text" name="technologyStack" placeholder="Technology Stack (comma-separated)"><br><br>
        <button type="submit">Post Job</button>
      </form>
    </section>

  </body>
</html>
